@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@page "/session"
@inject NavigationManager NavigationManager;

@{
  this.SubscribeToAction<SimpleGymTracker.WebUi.Store.WorkoutSession.RehydrateSessionAction>(state=>{
      if(WorkoutSessionState.Value.Day is null)
      {
        NavigationManager.NavigateTo("/");
      }
  });
}

@if(WorkoutSessionState.Value.Day is not null)
{
    <Session CycleRepcountForExercise=@CycleRepcountForExercise WorkoutSession=@(WorkoutSessionState.Value.Day) />
}
