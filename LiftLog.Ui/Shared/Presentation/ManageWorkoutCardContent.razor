<SplitCardControl>
    <MainContent>
        <SessionSummary Session="SessionBlueprint.GetEmptySession()" ShowSets="true" ShowWeight="false"/>
    </MainContent>
    <SideContent>
        <IconButton Type="IconButtonType.FilledTonal" OnClick="@(() => _menu?.Open())" Icon="more_horiz"/>
        <Menu @ref="_menu">
            <MenuItem Icon="delete" Label="Remove" OnClick="() => OnRemoveSession()"/>
            <MenuItem Icon="content_copy" Label="Duplicate" OnClick="() => OnDuplicateSession()"/>
        </Menu>
        <IconButton Type="IconButtonType.Outlined" OnClick="@(() => OnMoveSessionUp())" Icon="arrow_upward"/>
        <IconButton Type="IconButtonType.Outlined" OnClick="@(() => OnMoveSessionDown())" Icon="arrow_downward"/>
    </SideContent>
</SplitCardControl>

@code {
    private Menu? _menu;
    [Parameter] [EditorRequired] public SessionBlueprint SessionBlueprint { get; set; } = null!;

    [Parameter] [EditorRequired] public Action OnMoveSessionUp { get; set; } = null!;

    [Parameter] [EditorRequired] public Action OnMoveSessionDown { get; set; } = null!;

    [Parameter] [EditorRequired] public Action OnRemoveSession { get; set; } = null!;

    [Parameter] [EditorRequired] public Action OnDuplicateSession { get; set; } = null!;
}