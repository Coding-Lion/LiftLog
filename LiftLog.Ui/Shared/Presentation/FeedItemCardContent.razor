@if(Item is SessionFeedItem sessionFeedItem){
    <div class="flex flex-col gap-2 items-start">
        <span><span class="text-primary font-bold">@(User.Nickname ?? User.Name ?? "Anonymous User")</span> completed a workout!</span>
        <div class="w-full">
            <SessionSummary Session="sessionFeedItem.Session" IsFilled=true ShowSets=true />
        </div>
    </div>
}


@code {
    [Parameter]
    [EditorRequired]
    public FeedItem Item { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public FeedUser User { get; set; } = null!;
}
