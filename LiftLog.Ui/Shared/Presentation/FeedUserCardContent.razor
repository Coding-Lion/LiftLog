<SplitCardControl>
    <MainContent>
<div class="flex flex-col gap-4">
    <span class="text-left text-lg text-primary font-bold">@(User.Name ?? "Someone")</span>
    <TextField Value=@(User.Nickname ?? "") OnChange="val => UpdateUser(User with { Nickname = val })" label="Nickname" />
</div>
</MainContent>
<SideContent>

            <IconButton Type="IconButtonType.FilledTonal" OnClick=@DeleteUser Icon="person_remove" />
</SideContent>
</SplitCardControl>


@code {
    [Parameter]
    [EditorRequired]
    public FeedUser User { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public Action<FeedUser> UpdateUser { get; set; } = null!;

    [Parameter]
    [EditorRequired]
    public Action DeleteUser { get; set; } = null!;
}
