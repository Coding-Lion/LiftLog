<input
    class="@Class rounded-md border border-outline"
    placeholder="@Placeholder"
    type="@Type"
    inputmode="@InputMode"
    @onchange="OnChange"
    value="@Value"/>

@code
{
    [Parameter]
    public string? Placeholder { get; set; }

    [Parameter]
    public string? Type { get; set; }

    [Parameter]
    public string? InputMode { get; set; }

    [Parameter]
    public object? Value { get; set; }

    [Parameter]
    public string? Class { get; set; }

    [Parameter]
    public Action<ChangeEventArgs> OnChange { get; set; } = null!;
}
