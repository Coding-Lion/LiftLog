<Card Border="false">
    <div class="flex flex-col gap-1 items-center justify-center h-full">
        <span class="text-primary font-bold text-xl">
        @Body
        </span>
        <span class="text-sm text-secondary">@Title</span>
    </div>
</Card>

@code {

    [Parameter] [EditorRequired] public RenderFragment Title { get; set; } = null!;

    [Parameter] [EditorRequired] public RenderFragment Body { get; set; } = null!;

}